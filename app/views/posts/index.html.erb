<h3>Index page</h3>
 
 <div class="center">
  <div class="row row-eq-height">
    <% if @posts.count == 0 %>
    <h3>There are posts in this category yet </h3>
    <% else %>
    <% @posts.each do |post| %>
      <div class="col-xs-12 col-sm-6 col-md-4">
          <div class="thumbnail message"> 
            <% if post.image? %>
              <%= link_to (image_tag post.image.url), post %>
            <% end %>       
         
          <div class="caption">
          <h3 clas="message-title"><%= post.title %></h3>   
          <p><%= link_to "詳細を見る", post_path(post),class:"btn btn-default" %></p>
        </div>
       </div> 

      </div>
    <% end %>
    <% end %>
  </div>
 <p><%= link_to "一覧に戻る", root_path,class:"btn btn-default" %></p>
</div>











